@model List<BranchShiftViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" id="time"></h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                BranchName
            </th>
            <th>
                IsOpen
            </th>
            <th>
                NextOrCurrentShift
            </th>
            <th>
                DayName
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchName)
                </td>
                <td>
                    @if (item.IsOpen)
                    {
                        <span style="display: inline-block; width: 12px; height: 12px; border-radius: 50%; background-color: green;"></span>
                    }
                    else
                    {
                        <span style="display: inline-block; width: 12px; height: 12px; border-radius: 50%; background-color: red;"></span>
                    }
                </td>
                <td>
                    @item.StartTime - @item.EndTime
                </td>
                <td>
                    @item.DayName
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

<iframe 
    class="mt-5"
    src="https://www.google.com/maps/d/u/0/embed?mid=1uHoSiF65wkJXIsChpRcgNhDkZne6vk4&ehbc=2E312F"
    width="100%"
    height="400">
</iframe>

<script>
    const now = new Date();
    document.getElementById("time").textContent = `Last refresh: ${now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false })}`;
</script>
